<?xml version="1.0" encoding="utf-8" ?>
<!--获取凭证-->
<Credentials>
  <Credential>
    <!--微信平台类型，公众号：GZ；企业号：QY-->
    <WxPlatFormType>GZ</WxPlatFormType>
    <!--公众号请求信息-->
    <RequestInfo>
      <url>https://api.weixin.qq.com/cgi-bin/token</url>
      <protocoltype>https</protocoltype>
      <type>GET</type>
      <param>
        <!--格式必须为***:***-->
        <item>grant_type:client_credential</item>
        <item>appid:wx9860a8e317151de4</item>
        <item>secret:20df99973eeedf20cf88ae70ad85c10a</item>
      </param>
    </RequestInfo>
    <!--公众号token信息（回写，除early_end外其他不可修改）-->
    <TokenInfo>
      <!--令牌-->
      <access_token></access_token>
      <!--过期时间间隔-->
      <expires_in></expires_in>
      <!--写入此处的时间-->
      <gettoken_dt></gettoken_dt>
      <!--提早多长时间结束，300秒-->
      <early_end>300</early_end>
    </TokenInfo>
  </Credential>
  <Credential>
    <WxPlatFormType>QY</WxPlatFormType>
    <!--企业号请求信息-->
    <RequestInfo>
      <url>https://qyapi.weixin.qq.com/cgi-bin/gettoken</url>
      <protocoltype>https</protocoltype>
      <type>GET</type>
      <param>
        <item>corpid:wx033deb4ae901b2e9</item>
        <item>corpsecret:fD3-NyN71YEQ81Wt32phG9yrIe0zwb9lVIYrQrKAHZhMg09K1FHg5mb3GMobVdqv</item>
      </param>
    </RequestInfo>
    <!--企业号token信息（回写，除early_end外其他不可修改）-->
    <TokenInfo>
      <access_token></access_token>
      <expires_in></expires_in>
      <gettoken_dt></gettoken_dt>
      <early_end>300</early_end>
    </TokenInfo>
  </Credential>
</Credentials>
